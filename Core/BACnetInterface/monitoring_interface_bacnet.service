[Unit]
Description=Monitoring Interface BACnet
After=syslog.target network.target postgresql.service redis.service rabbitmq-server.service monitoring_interface_rabbit.service

[Service]
User=root
Type=notify
ExecStart=/usr/bin/dotnet /opt/monitoring/bacnet/BACnetInterface.dll --contentRoot /opt/monitoring/bacnet --environment Production
SuccessExitStatus=143
MemoryMax=4096M
Restart=always
RestartSec=10
KillSignal=SIGINT
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ConnectionStrings__DefaultConnection=Host\x3dlocalhost\x3bDatabase\x3dmonitoring_core\x3bUsername\x3dmonitoring\x3bPassword\x3ddbpassword
[Install]
Alias=monitoring_interface_bacnet.service
WantedBy=multi-user.target
